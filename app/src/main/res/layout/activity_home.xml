<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.fireapp.HomeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/addNewsUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:onClick="onClickView"
        android:text="Add News Update" />

    <Button
        android:id="@+id/verifiedNewsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addNewsUpdateBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClickView"
        android:text="Verified News" />

    <Button
        android:id="@+id/pendingNewsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifiedNewsBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClickView"
        android:text="Pending News" />
</RelativeLayout>
